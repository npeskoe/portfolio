@model IEnumerable<CarDealership.Models.Tables.Users>

@{
    ViewBag.Title = "Users";
}
<div class="row" id="space"></div>

<h2>Users</h2>
<a id="adduser">@Html.ActionLink("Add a new User", "AddUser", "Admin")</a>
<div class="row" id="space"></div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Last Name</th>
            <th scope="col">First Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.LastName</td>
                <td>@user.FirstName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@Html.ActionLink("Edit", "EditUser", new { id = user.Id, roleName = user.Role }, null )</td>
            </tr>
        }
        </tbody>
    </table>