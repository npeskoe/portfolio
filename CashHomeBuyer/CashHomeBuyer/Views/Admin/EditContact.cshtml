@model CashHomeBuyer.Models.Contact

@{
    ViewBag.Title = "EditContact";
}

<h2 id="admin_head">Edit Contact</h2>
<span class="text-danger">@Html.ValidationSummary();</span>
<div class="container" id="edit_form">
    @using (Html.BeginForm("EditContact", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(m => Model.ContactID)
        <div class="form-row form-inline">
            <div class="col-xl-8 form-group">
                <label class="col-xl-2 form-label">Address</label>
                @Html.TextBoxFor(m => Model.ContactAddress, new { id = "address", @class = "col-xl-8" })
            </div>
        </div>
        <div class="form-row form-inline">
            <div class="col-xl-8 form-group">
                <label class="col-xl-2 form-label">Name</label>
                @Html.TextBoxFor(m => Model.ContactName)
                <label class="col-xl-2 form-label">Email</label>
                @Html.TextBoxFor(m => Model.ContactEmail)
            </div>
        </div>
        <div class="form-row form-inline">
            <div class="col-xl-8 form-group">
                <label class="col-xl-2 form-label">Phone</label>
                @Html.TextBoxFor(m => Model.ContactPhone)
                <label class="col-xl-2 form-label">Date</label>
                @Html.TextBoxFor(m => Model.ContactDate)
            </div>
        </div>
        <div class="form-row form-inline">
            <div class="col-xl-8 form-group">
                <label class="col-xl-2 form-label">Notes</label>
                @Html.TextAreaFor(m => Model.Notes)
            </div>
        </div>
        <div class="form-row form-inline">
            <div class="col-xl-3"></div>
            <div class="form-group">
                <input type="button" class="btn btn-danger" value="Delete" id="deletebutton" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit" id="savebutton">Save</button>
            </div>
        </div>
    }
</div>
<script>
    $(document).ready(function () {

    });

    $('#deletebutton').click(function () {
        Delete(@Model.ContactID);
    })


    function Delete(id) {

        var c = confirm("Are you sure you want to delete this contact?")

        if (c) {
            $.ajax({
                type: 'DELETE',
                url: 'http://localhost:59555/contacts/delete/' + id,
                success: function (status) {
                    window.location = "/admin/managecontacts/";
                }
            })
        }
    }
</script>
